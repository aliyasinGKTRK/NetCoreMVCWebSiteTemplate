<!-- Contact Section Start -->
<section class="contact-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-7">
                <div class="materialContainer">
                    <div class="material-details">
                        <div class="title title1 title-effect mb-1 title-left">
                            <h2>Kontaktiere uns</h2>
                            <p class="ms-0 w-100">

                            </p>
                        </div>
                    </div>
                    <div class="row g-4 mt-md-1 mt-2">
                        <div class="col-md-6">
                            <label for="first" class="form-label">Name</label>
                            <input type="text" class="form-control" id="first" placeholder="Gib deinen Namen ein" required="">
                        </div>
                        <div class="col-md-6">
                            <label for="last" class="form-label">Nachname</label>
                            <input type="text" class="form-control" id="last" placeholder="" required="">
                        </div>
                        <div class="col-md-6">
                            <label for="email" class="form-label">Mail</label>
                            <input type="email" class="form-control" id="email" placeholder="Geben sie ihre E-Mailadresse ein" required="">
                        </div>
                        <div class="col-md-6">
                            <label for="email2" class="form-label">Telefon</label>
                            <input type="tel" class="form-control" id="email2" placeholder="Trage deine Telefonnummer ein" required="">
                        </div>

                        <div class="col-12">
                            <label for="comment" class="form-label">Ihre Nachricht</label>
                            <textarea class="form-control" id="comment" rows="5" required=""></textarea>
                        </div>

                        <div class="col-auto">
                            <button class="btn btn-solid-default" type="submit">Einreichen</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="contact-details">
                    <div>
                        <h2>Bize Ulaşın</h2>
                        <h5 class="font-light">Pass 'Ustaların Tercihi'</h5>
                        @foreach (var item in Model)
                        {
                            <div class="contact-box">
                                <div class="contact-icon">
                                    <i data-feather="map-pin"></i>
                                </div>
                                <div class="contact-title">
                                    <h4>Adresse :</h4>
                                    <p>@item.CompanyAddress</p>
                                </div>
                            </div>

                            <div class="contact-box">
                                <div class="contact-icon">
                                    <i data-feather="phone"></i>
                                </div>
                                <div class="contact-title">
                                    <h4>Telefonnummer :</h4>
                                    <p>@item.CustomerNumber</p>
                                    <p>@item.CompanyNumberTwo</p>
                                </div>
                            </div>

                            <div class="contact-box">
                                <div class="contact-icon">
                                    <i data-feather="mail"></i>
                                </div>
                                <div class="contact-title">
                                    <h4>Mail </h4>
                                    <p>@item.CompanyMail</p>
                                    <p>@item.CompanyMailTwo</p>
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->
