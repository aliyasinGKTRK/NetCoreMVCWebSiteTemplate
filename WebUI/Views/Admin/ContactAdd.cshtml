@model Entity.Contact

@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="main-container">
	<div class="pd-ltr-20 xs-pd-20-10">
		<div class="min-height-200px">
			<div class="page-header">
				<div class="row">
					<div class="col-md-6 col-sm-12">
						<div class="title">
							<h4>İletşim</h4>
						</div>

					</div>

				</div>
			</div>



			<!-- Default Basic Forms Start -->
			<div class="pd-20 card-box mb-30">
				<div class="clearfix">
					<div class="pull-left">
						<h4 class="text-blue h4">İletişim Ekleme Sayfası</h4>
					</div>

				</div>
				@using (Html.BeginForm("ContactAdd", "Admin", FormMethod.Post))
				{
					<div class="form-group row">
						<label class="col-sm-12 col-md-2 col-form-label">Mail Adresi </label>
						<div class="col-sm-12 col-md-10">
							@Html.TextBoxFor(x=>x.CompanyMail,new{@class="form-control"})
						</div>
					</div>


					<div class="form-group row">
						<label class="col-sm-12 col-md-2 col-form-label">Mail Adresi 2 </label>
						<div class="col-sm-12 col-md-10">
							@Html.TextBoxFor(x=>x.CompanyMailTwo,new{@class="form-control"})
						</div>
					</div>

					<div class="form-group row">
						<label class="col-sm-12 col-md-2 col-form-label">Adres </label>
						<div class="col-sm-12 col-md-10">
							@Html.TextBoxFor(x=>x.CompanyAddress,new{@class="form-control"})
						</div>
					</div>

					<div class="form-group row">
						<label class="col-sm-12 col-md-2 col-form-label">Adres 2 </label>
						<div class="col-sm-12 col-md-10">
							@Html.TextBoxFor(x=>x.CompanyAddressTwo,new{@class="form-control"})
						</div>
					</div>

					<div class="form-group row">
						<label class="col-sm-12 col-md-2 col-form-label">Teolefon No </label>
						<div class="col-sm-12 col-md-10">
							@Html.TextBoxFor(x=>x.CompanyNumber,new{@class="form-control"})
						</div>
					</div>

					<div class="form-group row">
						<label class="col-sm-12 col-md-2 col-form-label">Teolefon No 2</label>
						<div class="col-sm-12 col-md-10">
							@Html.TextBoxFor(x=>x.CompanyNumberTwo,new{@class="form-control"})
						</div>
					</div>

					<button class="btn  btn-outline-primary w-100" type="submit"><i class="icon-copy fa fa-save" aria-hidden="true"></i> Kaydet</button>


				}



			</div>


