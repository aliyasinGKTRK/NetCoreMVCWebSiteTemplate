@model List<Entity.Product>
@{
    ViewData["Title"] = "ProductAdminList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-container">
		<div class="pd-ltr-20">



		<div class="card-box mb-30">
				<h2 class="h4 pd-20"></h2>
				<table class="data-table table nowrap">
					<thead>
						<tr>
							<th class="table-plus datatable-nosort"></th>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th class="datatable-nosort">Action</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
					   {
						   	<tr>
						
							<td class="table-plus sorting_1" tabindex="0">
								<img src="~/urunler/@item.ImagePath" width="70" height="70" alt="">
							</td>
							<td>
								<h5 class="font-16">@item.ProductName</h5>
							
							</td>
							

							<td>
								<div class="dropdown">
									<a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
										<i class="dw dw-more"></i>
									</a>
									<div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
										<a class="dropdown-item" href="/Admin/ProductEdit/@item.ProductId"><i class="dw dw-edit2"></i> Edit</a>
										<a class="dropdown-item" href="/Admin/ProductDelete/@item.ProductId"><i class="dw dw-delete-3"></i> Delete</a>
							
									</div>
								</div>
							</td>
						</tr>
					   }
					
		
					</tbody>
				</table>
	
			</div>


		<br />
		<br />
		<br />
		</div>
	</div>

